@{
    ViewData["Title"] = "Home";
}
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<div class="container text-center">
<h4>Get the price:</h4>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
<form  asp-controller="Home" asp-action="Index" method="get">
    <div  class="text-danger" id="txtError"></div>
    <div class="form-group">
       Symbol: <input id="SearchSymbol" class="form-control" type="text" name="SearchSymbol" placeholder="GOOGL">
        <button id="btnSymbol" type="submit" class="btn btn-primary" >Get Price</button>
    </div>
</form>
  </div>
    <div class="col-md-4"></div>
    </div>
    <div class="row">
        <div class="col">
<div id="priceDiv"></div>
<div id="symbolChartDiv"></div>
</div>
</div>
</div>


<div class="jumbotron  bg-secondary">
  <h2 class="display-4">Why Trade with Us?</h2>
  
  <div class="lead ">
      <li class="">Commission free trades</li>
      <li class="">24/7 real time price</li>
      <li class="">3 month chart Price History</li>
      <li class="">New accounts will get $10,000</li>
      <li class="">It's Fantasy Money!</li>
  </div>
  <hr class="my-4">
  <div class="container text-center">
  <p class="lead"> Sign up for an account!</p>
  <a class="btn btn-primary btn-lg" href="~/Identity/Account/Login" role="button">Login</a>
  </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}