@model IEnumerable<FantasyWealth.Models.Trade>

<p>
    <a class="btn btn-outline-info btn-lg" asp-action="Create">New Trade</a>
</p>

<hr />
<div class="text-center">
    <div class="row">
        <div class="col">
            <div id="tradeDiv">
                <div class="p-2 bg-primary text-white d-none d-sm-block">Trade:</div>
                @if (Model.Count() == 0)
                {
                    <tbody>
                        <tr>
                            There is no record!
                        </tr>
                    </tbody>
                }
                else
                {
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Symbol</th>
                                <th scope="col">Shares</th>
                                <th scope="col">Price</th>
                                <th scope="col">Action</th>
                                <th scope="col">Status</th>
                                <th scope="col">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Trade" asp-action="Details" asp-route-id="@item.Id"> @Html.DisplayFor(modelItem => item.Id) </a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Symbol.Symbol)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                    <td>
                                        $ @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Action)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreationDate)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
<div class="text-right">
    <p>
        <a asp-action="Create" class="btn btn-outline-info btn-lg">New Trade</a>
    </p>
</div>
