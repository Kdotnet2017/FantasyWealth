@model FantasyWealth.Models.Trade
@{
    ViewData["Title"] = "Create Trade";
}

<div id="warningMessage" ></div>
<div class="text-center">
<h3>Make a Trade for <span id="lblTradeON" class="d-inline  bg-info text-white"></span></h3>
<hr />
<div class="row">
<div class="col-md-4">

</div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
            <div class="col">
            <div class="form-group">
                <label asp-for="SymbolId" class="control-label"></label>
                <select asp-for="SymbolId" class="form-control" asp-items="ViewBag.SymbolId" id="ddlSymbol">
                     <option selected="selected" value="Select">Please select</option>
                </select>
            </div>
            </div>
            </div>
            <div class="row">
            <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" id="txtQuantity" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            </div>
            <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" id="lblPrice" value="@ViewBag.Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            </div>
             <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="Action" class="control-label"></label>
                <select asp-for="Action" class="form-control" asp-items="Html.GetEnumSelectList<TradeAction>()" id="ddlTradeAction">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Action" class="text-danger"></span>
            </div>
            </div>
            </div>
             <div class="row">
            <div class="col-sm-6">
            <div class="form-group">
                <label  class="control-label">Total Amount</label>
                <input id="txtTotal"  class="form-control" />
                
            </div>
            </div>
            <div class="col-sm-6"></div>
            </div>
          
            <div class="row">
            <div class="col">
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            </div>
            </div>
             <div class="row">  
             <div class="col">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
            </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col">
<div>
    <a asp-action="Index">Cancel</a>
</div>
</div>
</div>
<div class="row">
    <div class="col" id="symbolChartDiv"></div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

